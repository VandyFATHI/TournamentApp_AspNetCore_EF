@model WebApplication1.Models.Team

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>team</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Team name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt>
            Team captain
        </dt>

        <dd>
            @Html.DisplayFor(model => model.player.name)
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tournament.description)
        </dd>

        <dt>
            Number of members
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nb_members)
        </dd>

    </dl>
</div>
@if (User.IsInRole("Admin")) {
@Html.ActionLink("Edit", "Edit", new { id = Model.id }) <span>|</span>
}
<p>

    @Html.ActionLink("See Player", "View_Player", new { id = Model.id }) |
    @Html.ActionLink("Back to List", "Index", new { id = Model.tournament_id })
</p>
