@model IEnumerable<WebApplication1.Models.Player>

@{
    ViewBag.Title = "Index";
    var id = ViewBag.ID;
    var tid = ViewBag.TID;
    
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Retour Vers Tournoi", "BackToTournament", new { id = id })
    @Html.ActionLink("Retour Vers Team", "BacktoTeams", new { id = tid })
    @Html.ActionLink("Create New Player", "Create", new { id = id })

</p>
<table class="table">
    <tr>
        <th>
            Player Name
        </th>
        <th>
            Team name
            </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.team.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
